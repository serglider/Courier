{
    "compilerOptions": {
        "target": "ES6",
        "module": "commonjs",
        "declaration": true,
        "declarationDir": "./types",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowUnreachableCode": false,
        "esModuleInterop": true
    },
    "include": ["./src/**/*"],
    "exclude": ["./node_modules/**/*"]
}
